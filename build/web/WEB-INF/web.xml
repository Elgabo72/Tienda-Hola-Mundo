<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>Controlador.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>Controlador.Controller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerIMG</servlet-name>
        <servlet-class>Controlador.ControllerIMG</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerCerrarSesion</servlet-name>
        <servlet-class>Controlador.ControllerCerrarSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pdfController</servlet-name>
        <servlet-class>Controlador.pdfController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/ControllerLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/Controller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerIMG</servlet-name>
        <url-pattern>/ControllerIMG</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerCerrarSesion</servlet-name>
        <url-pattern>/ControllerCerrarSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pdfController</servlet-name>
        <url-pattern>/pdfController</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
